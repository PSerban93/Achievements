{
  "name": "Achievements",
  "version": "1.0.6",
  "description": "",
  "author": "JokerVerse",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.achievements.app",
    "productName": "Achievements",
    "copyright": "Copyright Â© 2025 JokerVerse",
    "asarUnpack": [
      "utils/pslist-wrapper.mjs"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
	  "icon.ico",
      "main.js",
      "preload.js",
      "index.html",
      "overlay.html",
      "progress.html",
      "gameImage.html",
      "playtime.html",
      "playtime-log-watcher.js",
      "style.css",
      "sounds/**/*",
      "presets/**/*",
      "utils/**/*",
      "utils/pslist-wrapper.mjs"
    ],
    "extraResources": [
      {
        "from": "sounds",
        "to": "sounds"
      },
      {
        "from": "presets",
        "to": "presets"
      },
	  {
      "from": "icon.ico",
      "to": "icon.ico"
    }
    ],
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Achievements"
    }
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "crc-32": "^1.2.2",
    "gntp": "^0.1.1",
    "growly": "^1.3.0",
    "ini": "^4.1.1",
    "jsdom": "^26.1.0",
    "ps-list": "^8.1.1",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.1"
  }
}
